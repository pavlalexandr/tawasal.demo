@page
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers


@model Web.Areas.Identity.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Sign in page";
    Layout = "/Areas/Identity/Pages/Shared/_Layout.cshtml";
}

<div class="d-flex flex-column justify-content-center align-items-center">
    <h2>Sign in</h2>
    <form method="post" id="account">
        <div class="mb-3">
            <label for="Email" class="form-label">Email address</label>
            <input type="email" class="form-control" asp-for="Email" aria-describedby="emailHelp">
            <span asp-validation-for="Email" class="text-danger"></span>
            <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
        </div>
        <div class="mb-3">
            <label for="Password" class="form-label">Password</label>
            <input type="password" class="form-control" asp-for="Password">
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        @if (Model.Error != null)
        {
            <p class="text-danger">@Model.Error</p>
        }       
        <input type="submit" class="btn btn-primary " value="Submit" style="margin-top:5px;width:100%"/>
    </form>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

